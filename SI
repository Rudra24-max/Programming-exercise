#include<stdio.h>

int main()
{
    float principal, rate, intrest, si;
    
    printf("enter principal");
    scanf("%%f",principal);
    
    printf("enter rate");
    scanf("%f",rate);
    
    printf("enter intrest");
    scanf("%f",intrest);
    
    
    si= principal*rate*intrest/100.0 
    printf("si is %f",si);
    
}